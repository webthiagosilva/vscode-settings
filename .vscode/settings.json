{
    // ü™ü Janela e Workbench
    "window.titleBarStyle": "custom",
    "window.zoomLevel": -1,
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Dracula Theme",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.enableStickyScroll": false, //Quando ativado, o recurso Sticky Scroll mant√©m os cabe√ßalhos ou se√ß√µes vis√≠veis no topo enquanto voc√™ rola por listas ou √°rvores.

    // üß† Editor
    "editor.tabSize": 4,
    "editor.fontSize": 14,
    "editor.lineHeight": 24,
    "editor.letterSpacing": 0.5,
    "editor.fontLigatures": true,
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "smooth",
    //"editor.insertSpaces": false,
    "editor.autoIndent": "advanced",
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 120,
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.organizeImports": "never"
    },
    "editor.inlineSuggest.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    //"editor.guides.bracketPairs": "active",
    "editor.minimap.enabled": false,
    "editor.rulers": [80, 120],
    "editor.stickyScroll.enabled": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.suggestSelection": "first",
    "editor.smoothScrolling": true,

    // üß≠ Navega√ß√£o
    "breadcrumbs.enabled": false,
    "explorer.confirmDelete": true,
    "explorer.compactFolders": false,
    "explorer.autoReveal": true,
    "explorer.openEditors.visible": 1,

    // üìÅ Arquivos
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        //"*.blade.php": "php",
        "*.vue": "vue",
        "*.php-cs": "php",
        "*.js": "javascript",
        "*.jsx": "javascriptreact",
        "*.ts": "typescript",
        "*.tsx": "typescriptreact",
        "docker-compose*": "yaml",
        "*.env.development": "env",
        "*.env.production": "env",
        "*.env.example": "env",
        "*.env": "env"
    },

    // üîç Busca
    "search.collapseResults": "alwaysCollapse",
    "search.showLineNumbers": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/vendor": true,
        "**/*.code-search": true
    },

    // üîê Seguran√ßa
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",

    // üêò PHP / Intelephense
    "php.validate.enable": false,
    "php.suggest.basic": false,
    "intelephense.telemetry.enabled": false,
    "intelephense.format.enable": true,
    "intelephense.format.braces": "per",
    "intelephense.completion.triggerParameterHints": true,
    "intelephense.completion.insertUseDeclaration": true,
    "intelephense.diagnostics.undefinedSymbols": true,
    "intelephense.environment.includePaths": [],
    "intelephense.files.maxSize": 5000000,
    "intelephense.codeLens.implementations.enable": true,
    "intelephense.codeLens.parent.enable": true,
    "intelephense.codeLens.overrides.enable": true,
    "intelephense.codeLens.references.enable": true,
    "intelephense.codeLens.usages.enable": true,
    "intelephense.compatibility.preferPsalmPhpstanPrefixedAnnotations": true,
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
    "intelephense.references.exclude": [],
    "intelephense.rename.exclude": ["**/vendor"],
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/.idea/**",
        "**/.phpunit.result.cache"
    ],

    // üß™ PHPUnit
    "phpunit.clearOutputOnRun": true,
    "phpunit.command": "docker exec -t gestao-de-risco-php /bin/sh -c",
    "phpunit.php": "php",
    "phpunit.phpunit": "vendor/bin/pest",
    "phpunit.args": ["-c", "phpunit.xml"],
    "phpunit.paths": {
        "${workspaceFolder}": "/var/www/html/gestao-de-risco"
    },

    // üßπ ESLint + Prettier
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.lintTask.enable": true,
    "prettier.singleQuote": true,
    "prettier.printWidth": 120,
    "prettier.tabWidth": 4,
    "prettier.useTabs": true,
    "prettier.semi": true,
    "prettier.bracketSpacing": true,
    "prettier.bracketSameLine": false,
    "prettier.arrowParens": "avoid",
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // üß† Copilot
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "markdown": false,
        "plaintext": true,
        "scminput": false
    },
    "github.copilot.selectedCompletionModel": "gpt-4o-copilot",

    // üåê Emmet
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "vue-html": "html",
        "blade": "html"
    },
    "emmet.syntaxProfiles": {
        "javascript": {
            "attr_quotes": "single",
            "tag_nl": true
        }
    },

    // üß© Idioma por arquivo
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-containers"
    },
    "[shellscript]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
        "editor.wordBasedSuggestions": "allDocuments",
        "editor.autoIndent": "advanced",
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
        "editor.autoIndent": "advanced"
    },

    // üì° Telemetria desativada
    "telemetry.enableTelemetry": false,
    "redhat.telemetry.enabled": false,
}
