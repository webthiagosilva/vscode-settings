{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker Xdebug 3",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}/src"
      },
      "log": true,
      "hostname": "localhost",
      "ignore": [
        "**/vendor/**/*.php"
      ],
      "xdebugSettings": {
        "max_data": 65535,
        "max_children": 100,
        "max_depth": 10
      },
      "stopOnEntry": false,
    }
  ]
}
